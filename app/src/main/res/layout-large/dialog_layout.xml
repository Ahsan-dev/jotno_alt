<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/dialog_back"

    >
    <LinearLayout
        android:id="@+id/alertTitleLinear"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_margin="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/jotno_logo"/>

    </LinearLayout>

    <TextView
        android:id="@+id/alertDialogMessageId"
        android:layout_below="@id/alertTitleLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to logout?"
        android:layout_centerInParent="true"
        android:textSize="35sp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/black"
        />
    <View
        android:id="@+id/horizontal_line_id"
        android:layout_above="@id/btn_linear_id"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:id="@+id/btn_linear_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"

        android:weightSum="2"
        >
        <TextView
            android:id="@+id/alert_negative_btn_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="45sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:padding="15dp"
            android:textColor="#F30A0A"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/white"/>



        <TextView
            android:id="@+id/alert_positive_btn_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="45sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:padding="15dp"
            android:textColor="#08981B"/>


    </LinearLayout>






</RelativeLayout>