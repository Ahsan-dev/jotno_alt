<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change your password here"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send you a password reset link in your email address"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />


    <LinearLayout
        android:id="@+id/forget_pass_email_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/register_edt_fields"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/light_red"
            android:textSize="12sp"
            />
        <EditText
            android:id="@+id/forget_pass_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Email"
            android:inputType="textPassword"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/purple_200"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:paddingTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:textIsSelectable="false"
            android:textSize="13sp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/forget_pass_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Send Password Request"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="12sp"
        />



</LinearLayout>