<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrescriptAppointFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/prescript_appointment_prescript_header_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/edt_field_color"
                android:paddingBottom="8dp"
                >

                <LinearLayout
                    android:id="@+id/prescript_appointment_doctor_name_id_deg_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prescript_appointment_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Doctor's Name"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/prescript_appointment_doctor_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiologist"
                        android:textColor="@color/purple_200" />


                </LinearLayout>

                <TextView
                    android:id="@+id/prescript_appointment_doctor_mobile"
                    android:layout_below="@id/prescript_appointment_doctor_name_id_deg_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="0177856665*"
                    android:drawableLeft="@drawable/call_icon"
                    android:drawablePadding="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/prescript_appointment_doctor_hospital"
                    android:layout_below="@id/prescript_appointment_doctor_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="Doctor's Hospital"
                    android:drawableLeft="@drawable/hospital_icon"
                    android:drawablePadding="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/prescript_appointment_doctor_address"
                    android:layout_below="@id/prescript_appointment_doctor_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="Doctor's Address"
                    android:drawableLeft="@drawable/location_icon"
                    android:drawablePadding="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/prescript_appointment_doctor_time"
                    android:layout_below="@id/prescript_appointment_doctor_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="8.30 am to 10.30 am, SUN, MON, TUE"
                    android:drawableLeft="@drawable/time_icon"
                    android:drawablePadding="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"/>



            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/prescript_appointment_patient_info"
                android:layout_below="@id/prescript_appointment_prescript_header_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient ID: "
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/prescript_appointment_patient_id_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P-256987"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient Name: "
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/prescript_appointment_patient_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient's Name"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient's Age: "
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/prescript_appointment_patient_age_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient's Gender: "
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/prescript_appointment_patient_gender_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient's Gender"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prescript_appointment_tests_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/prescript_appointment_patient_info"
                android:background="@color/light_gray"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp" />

            <LinearLayout
                android:id="@+id/prescript_appointment_main_prescription_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/prescript_appointment_tests_recycler"
                android:orientation="horizontal"
                android:weightSum="2"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/prescript_appointment_advice_findings_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/rx"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/prescript_appointment_medicines_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>
    </ScrollView>
</LinearLayout>