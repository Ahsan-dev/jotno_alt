<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:id="@+id/prescript_medicine_recycler_item_medicine_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Name"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/prescript_medicine_recycler_item_medicine_three_times_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1+0+1"
        />
    <TextView
        android:id="@+id/prescript_medicine_recycler_item_medicine_meal_status_span_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before Meal, 1 Month"
        />

</LinearLayout>